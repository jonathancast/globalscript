#! /usr/local/plan9/bin/rc

# §paragraph{C Testing library}
cd $GLOBALSCRIPT/src/libtest &&
    mk install &&
# §paragraph{IBIO & Its Pre-requisites}
    cd ../libglobalscript/ &&
    mk install &&
    cd ../cmd &&
    mk pure-install &&
    cd ibio/ &&
    mk install &&
    $GLOBALSCRIPT/src/cmd/rc/test-gslib &&
# §paragraph{Interpreted Compiler}
    cd ../gsac &&
    mk interpreted && mk install-interpreted && mk effect &&
    cd ../gscr &&
    mk interpreted && mk install-interpreted && mk effect &&
    cd ../gsty &&
    mk interpreted && mk install-interpreted && mk effect &&
    cd ../gsobj &&
    mk interpreted && mk install-install && mk effect &&
# §paragraph{Compiled Compiler}
    cd ../gsac &&
    mk compiled && mk install-compiled &&
    cd ../gscr &&
    mk compiled && mk install-compiled &&
    cd ../gsty &&
    mk compiled && mk install-compiled &&
    cd ../gsobj &&
    mk compiled && mk install-compiled
