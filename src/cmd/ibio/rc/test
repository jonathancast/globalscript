#! /usr/local/plan9/bin/rc -e

. $GLOBALSCRIPT/bin/test-fns

ok_grep_errors '-- undefined entry points --' './test-gslib/undef-api.ags:5: undefined' ./$O.ibio undef-api.ags
ok_grep_errors '-- entry points that don''t use the newtype wrapper --' './test-gslib/wrong-type.ags: Bad type' ./$O.ibio wrong-type.ags

ok_diff '-- Hello, world --' ./$O.ibio hello.ibio.ags
ok_diff '-- echo command --' ./$O.ibio echo.ibio.ags Hello world

ok_diff_case '-- stat (directory) --' directory ./$O.ibio stat.ibio.ags ./test-gslib
ok_diff_case '-- stat (file) --' file ./$O.ibio stat.ibio.ags ./test-gslib/stat.ibio.ags

ok_diff_case '-- isdir (directory) --' directory ./$O.ibio isdir.ibio.ags ./test-gslib
ok_diff_case '-- isdir (file) --' file ./$O.ibio isdir.ibio.ags ./test-gslib/isdir.ibio.ags

ok_diff_case '-- isempty (empty) --' empty ./$O.ibio isempty.ibio.ags < /dev/null
ok_diff_case '-- isempty (non-empty) --' non-empty ./$O.ibio isempty.ibio.ags < ./test-gslib/isempty.ibio.ags
