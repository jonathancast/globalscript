#! /bin/sh

GLOBALSCRIPT=${GLOBALSCRIPT:-$PWD}

SCRIPTS="$GLOBALSCRIPT/src/test-all $GLOBALSCRIPT/src/mk-all $GLOBALSCRIPT/src/libglobalscript/rc/test"
SCRIPTS="$SCRIPTS $GLOBALSCRIPT/src/cmd/ibio/rc/test $GLOBALSCRIPT/bin/globalscript $GLOBALSCRIPT/bin/apithreadcompile"

u sed -i "s,/usr/local/plan9/,$PLAN9/,g" $SCRIPTS
u sed -i "s,/usr/local/globalscript/,$GLOBALSCRIPT/,g" $SCRIPTS

chmod a+x $SCRIPTS

echo 'Append '
echo 'GLOBALSCRIPT='$GLOBALSCRIPT
echo 'to ~/.bashrc or run manually to use this source tree'
